<Window x:Class="AirConditionerShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop"
        mc:Ignorable="d"
        Title="Login to server" Height="450" Width="800" Background="#FFD4F7D4" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="342" Stroke="Black" VerticalAlignment="Top" Width="690"
                   RadiusX="20"
                   RadiusY="20" Margin="0,38,0,0"
                   />
        <Label Content="Log In" HorizontalAlignment="Center" Height="74" Margin="0,60,0,0" VerticalAlignment="Top" Width="136"
               Background="Transparent" 
               Foreground="#000"
               FontSize="40"
               FontWeight="ExtraBold"/>
        <Label Content="Email:" HorizontalAlignment="Left" Height="32" Margin="120,150,0,0" VerticalAlignment="Top" Width="102"/>
        <TextBox x:Name="EmailAddressTextBox" HorizontalAlignment="Left" Height="32" Margin="227,150,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="374" TabIndex="0"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="32" Margin="120,210,0,0" VerticalAlignment="Top" Width="102"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="32" FontSize="16" Padding="0,6,0,0" VerticalAlignment="Top" Width="374" TabIndex="1" Margin="227,210,0,0"/>
        <Button x:Name="LoginButton" Content="Log In" HorizontalAlignment="Left" Height="33" Margin="120,270,0,0" VerticalAlignment="Top" Width="126" TabIndex="2" Click="LoginButton_Click"/>
        <Label Content="@TranLePhucThien" HorizontalAlignment="Left" Height="45" Margin="500,300,0,0" VerticalAlignment="Top" Width="182" Foreground="#000" Grid.Column="2"/>
    </Grid>
</Window>
